<% @song.stories.each do |story| %>
  <p>'<%= story.body %>' <small>said <%= story.user.name %> on <%= story.updated_at.strftime('%A, %B %e, %Y') %></small><p>
  <%= link_to 'Edit', edit_story_path(story) %> | <%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Back', @song %>
<% end %>