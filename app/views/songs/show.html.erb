
<div class="row">
  <div class="col-md-12">
    <h2>
      <%= render partial: 'song', locals: {song: @song} %>
    </h2>
    <p><%= markdown_to_html @song.lyrics %></p>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'story', locals: {song: @song} %>
  </div>
</div>


<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: '/stories/new_comment', locals: {song: @song} %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to '| EDIT', edit_song_path(@song) %>
        <% end %>
      <% else %>
        <p><mark>To comment on a song you need to sign up for a (free) account and become a citizen</mark></p>
    <% end %>
    <%= link_to 'Back To Songs', songs_path %>
  </div>
</div>