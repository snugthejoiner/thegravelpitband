
<div class="row">
  <div class="col-md-12">
    <h2>
      <%= @song.title %>
    </h2>
    <%= simple_format(@song.lyrics) %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'story', locals: {song: @song} %>
  </div>
</div>


<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: '/stories/new_comment', locals: {song: @song} %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to 'EDIT', edit_song_path(@song) %> |
        <% end %>
      <% else %>
        <p><mark>To comment on a song you need to <%= link_to "Sign Up", new_user_registration_path %> for a (free) account and become a citizen</mark></p>
    <% end %>
    <%= link_to 'Back To Songs', songs_path %>
  </div>
</div>