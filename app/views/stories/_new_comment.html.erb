<div class="row">
  <div class="col-md-12">
    <%= form_for Story.new do |f| %>
    <div class="form-group">
      <h1><%= f.text_field :title, placeholder: "Title (if you like)", :autofocus => true %></h1>
      <p><%= f.text_area :body, :size => "75x10" %></p>
      <%= f.hidden_field :song_id, :value => song.id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Save" , class: 'btn btn-primary' %>
    <% end %>
    <%= link_to "Cancel", :back, class: 'btn btn-danger' %>
  </div>
</div>
</div>