<h2 class="category"><%= link_to "Catalog", releases_path %></h2><hr>

<div class="row">
  <div class="col-md-6">
    <h3>
      <%= @release.title %>
    </h3>
    <p>released <%= @release.release_date.strftime('%A, %B %e, %Y') %></p>
    <%= link_to "purchase a copy", purchase_link(@release) %>
  </div>
  <div class="col-md-6">
    <%= image_tag(cover_art(@release),:size => "200x200") %>
  </div>
</div>

<% if user_signed_in? %>
  <%= render partial: 'rating', locals: {release: @release} %>

<div class="row">
  <div class="col-md-12">
    <%= age_when_released(@release) %>
  </div>
</div>

<% end %>

<hr>


<div class="row">
  <div class="col-md-12">
    <%= render partial: 'tracklist', locals: {release: @release} %>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'story', locals: {release: @release} %>
  </div>
</div>


<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: '/stories/new_comment', locals: {release: @release} %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to 'EDIT', edit_release_path(@release) %> |
        <% end %>
      <% else %>
        <p><mark>To rate or comment on a release you need to <%= link_to "Sign Up", new_user_registration_path %> for a (free) account and become a citizen</mark></p>
    <% end %>
    <%= link_to 'Back', :back, class: 'btn btn-info' %>
  </div>
</div>