<!DOCTYPE html>
<html>
<head>
  <title>The Gravel Pit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="container-fluid">
  <ul class="nav nav-tabs">
    <li><%= link_to image_tag("pitsymbol.jpg" ), root_path %></li>
    <li><%= link_to "Songs", root_path %></li>
    <li><%= link_to "Shows", shows_path %></li>
    <li><%= link_to "History", root_path %></li>
  </ul>

    <div class="pull-right user-info">
      <% if user_signed_in? %>
        <% if current_user.name.nil? || current_user.name == "" %>
          <%= current_user.email %> <%= link_to "", edit_user_registration_path(current_user), class: 'glyphicon glyphicon-user' %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
        <% else %>
        <%= current_user.name %> <%= link_to "", edit_user_registration_path(current_user), class: 'glyphicon glyphicon-user' %> | <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
        <% end %>
      <% else %>
      <%= link_to "Sign In", new_user_session_path %> or
      <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
    </div>

        <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
       <% elsif flash[:error] %>
         <div class="alert alert-danger">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:error] %>
         </div>
       <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
       <% end %>

<%= yield %>

</div><!-- outer container -->
</body>
</html>
