<% @show.stories.sorted_by_user_type.each do |story| %>
  <p><%= markdown_line(story.body) %> <small>said 
    <% if story.user.name.nil? %>
      <%= story.user.email %>
    <% else %>
      <%= story.user.name %>
    <% end %>
      on <%= story.updated_at.strftime('%A, %B %e, %Y') %>
  <% if policy(story).update? %> 
    | <%= link_to 'EDIT', edit_story_path(story) %>
    <% end %>
  </small></p>
<% end %>