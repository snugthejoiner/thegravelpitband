<div class="row">
  <div class="col-md-12">
    <div class="listing">
    <h1><%= @show.date.strftime('%A, %B %e, %Y') %></h1>
      <h2><%= @show.full_description %></h2>
      <% if @show.performances? %>
        <p><%= @show.bill %></p>
      <% end %>
      <% if @show.noted? %>
        <em><%= @show.note %></p></em>
      <% end %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
<div class="row">
  <div class="col-md-12">
    <%= age_at_show(@show) %>
  </div>
</div>

<hr>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'story', locals: {show: @show} %>
  </div>
</div>


<% if user_signed_in? %>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: '/stories/new_comment', locals: {show: @show} %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <% if user_signed_in? %>
      <% if policy(@show).edit? %>
        <%= link_to 'EDIT', edit_show_path(@show), class: 'btn btn-warning' %>
      <% end %>
    <% end %>
    <%= link_to 'Back', :back, class: 'btn btn-info' %>
  </div>
</div>