<div class="row">
  <div class="col-md-12">
    <% @shows.each do |show| %>
      <div class="media">
        <div class="media-body">
            <div class="listing">
              <%= show.date.strftime('%m/%d/%Y') %> <%= show.place.name %>
                <% if show.place.city? %>
                  in <%= show.place.city %>, 
                <% end %>
              <%= show.place.state %> <small><%= link_to "details", show %></small>
            </div>
        </div>
      </div>   
    <% end %>
  </div>
</div>
<br>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div class="row">
      <div class="col-md-12">
        <%= link_to 'New Show', new_show_path, class: 'btn btn-success'  %>
      </div>
    </div>
  <% end %>
<% end %>
